link(href='css/bootstrap.min.css', rel='stylesheet')


block content
  .container
      .row
        .row
          .col-md-4.col-md-offset-4
            .panel.panel-default
              .panel-body
                .text-center
                  h3
                    i.fa.fa-lock.fa-4x
                  h2.text-center Forgot ID or Password?
                  p You can reset your password here.
                  .panel-body
                    form.form
                      fieldset
                        .form-group
                          .input-group
                            span.input-group-addon
                              i.glyphicon.glyphicon-envelope.color-blue
                            input#emailInput.form-control(placeholder='email address', type='email', oninvalid="setCustomValidity('Please enter a valid email address!')", onchange="try{setCustomValidity('')}catch(e){}", required='')
                        .form-group
                          input.btn.btn-lg.btn-primary.btn-block(value='Send My ID or Password', type='submit')
