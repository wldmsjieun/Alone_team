extends ../layout

block content
    .container(style=' width: 1500px; margin-left:20rem;margin-top: 100px')
        .row
            .col-lg-8
                div
                    p
                    p
                    //- 웹 페이지 자체에 뒤로가기가 있는 데 중복은 필요없을 것같아서 뺄게요 
                    //- a(href='/') 뒤로가기
                    p
                form(action='/itemboard/new', method='post',enctype="multipart/form-data")
                    div
                        h3 방개설하기
                    fieldset
                        div
                            label(for="room_maker") 개설자
                            div
                                input(type="text", class="form-control", name="room_maker")
                        div
                            label(for="deadline") 마감일
                            div
                                input(type='date' class="form-control" name='deadline' min='2019-01-01')
                        div
                            label(for="category") 카테고리
                            div
                                select#sel1.form-control(name="category")
                                        option 카테고리를 선택하세요
                                        option 식자재
                                        option 즉석식품
                                        option 반찬
                                        option 음료수/아이스크림
                                        option 커피/차
                                        option 해외직구
                                        option 기타
                        div
                            label(for="item") 품목 
                            div
                                input(type="item", class="form-control", name="item")
                        div  
                            label(for="title") 방제목
                            div
                                input(type="text",class="form-control", name="title")
                        div  
                            label(for="picture" name="picture") 사진 올리기
                                input.form-control-file.border(type='file' name='picture' required)
                        
                        div  
                            label(for="members") 모집 인원
                            div
                                select#sel1.form-control(name="members")
                                        option 모집할 인원을 선택하세요
                                        option 2
                                        option 3
                                        option 4
                                        option 5
                                        option 6
                                        option 7
                                        option 8
                                        option 9
                                        option 10
                                        option 11
                                        option 12
                                        option 13
                                        option 14
                                        option 15
                        div
                            label(for="comment") 하고싶은 말
                            div
                                textarea(name="comment",class="form-control", cols="30", rows="10")        
                    div
                        button.btn.btn-primary.btn-block(type="submit" style="margin-top:10px; margin-bottom:10px") 제출
                        
